<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:src="@drawable/photo"
            android:id="@+id/imageView" />

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Choose Image"
            android:background="@color/bold"
            android:padding="10dp"
            android:id="@+id/textView"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- Name field -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hint_item_name"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/bold"
                android:textStyle="bold" />

            <!-- Breed field -->
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint="@string/hint_name_price"
                android:inputType="textCapWords"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- Name field -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/price"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/bold"
                android:textStyle="bold" />

            <!-- Breed field -->
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint="Input Price of Product"
                android:inputType="numberDecimal"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/bold"
                android:id="@+id/editText2" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- Name field -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Supplier"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/bold"
                android:textStyle="bold" />

            <!-- Breed field -->
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint="Input Supplier Name"
                android:inputType="textCapWords"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/bold"
                android:id="@+id/editText" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">

            <!-- Name field -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Quantity"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/bold"
                android:textStyle="bold" />

            <!-- Breed field -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint=" Add to Quantity From Below"
                android:inputType="textCapWords"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8sp"
            android:onClick="increment"
            android:text="+" />

        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="8sp"
            android:layout_marginRight="8sp"
            android:text="1" />

        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="decrement"
            android:text="-" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:hint="Manual Input"
            android:inputType="number"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Add to Quantity"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:background="@color/pea"
            android:textAlignment="center"
            android:gravity="center_vertical"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Sales"
        android:background="@color/plum"
        android:padding="10dp"
        android:layout_marginRight="4dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="@color/colorAccent"
        android:text="Order Shipment"
        android:padding="10dp"
        android:layout_marginLeft="4dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>
    </LinearLayout>






</LinearLayout>